<section class="login-page">
    <div class="form-heading">
        <h1>Log In</h1>
    </div>
    <div class="form-section">
        <form class="login-form">
            <div>
                <label for="username-login">Username</label>
                <input type="text" class="entry-field" id="username-login" />
            </div>
            <div>
                <label for="password-login">Password</label>
                <input type="password" class="entry-field" id="password-login" />
            </div>
            <div>
                <button type="submit" class="login-signup-btn">Click to Login</button>
            </div>
        </form>
    </div>

    <h3> <a href="/signup" class="sign-in-link">Click to sign up instead</a></h3>
</section>

<script src="/js/login.js"></script>